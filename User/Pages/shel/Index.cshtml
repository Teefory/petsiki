@page
@model petsiki.Pages.shel.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Shelter[0].Address)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Shelter[0].Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Shelter[0].AmountOfMoneyCollected)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Shelter)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Address)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.AmountOfMoneyCollected)
                </td>
                <td>
                    <a asp-page="./Edit" asp-route-id="@item.IdShelter">Edit</a> |
                    <a asp-page="./Details" asp-route-id="@item.IdShelter">Details</a> |
                    <a asp-page="./Delete" asp-route-id="@item.IdShelter">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
