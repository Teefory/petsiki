@page
@model petsk.Pages.shel.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Добавить приют</h1>


<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Shelter.Address" class="control-label"></label>
                <input asp-for="Shelter.Address" class="form-control" />
                <span asp-validation-for="Shelter.Address" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Shelter.Description" class="control-label"></label>
                <input asp-for="Shelter.Description" class="form-control" />
                <span asp-validation-for="Shelter.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Shelter.AmountOfMoneyCollected" class="control-label"></label>
                <input asp-for="Shelter.AmountOfMoneyCollected" class="form-control" />
                <span asp-validation-for="Shelter.AmountOfMoneyCollected" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Создать" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Назад</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
